<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="5sp"
    android:background="#4A4A4A"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ibListTransformerBoxes"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:width="48sp"
        android:height="48sp"
        android:padding="5dp"
        android:background="@drawable/ic_list_icon_ui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ibMapView"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:width="48sp"
        android:height="48sp"
        android:padding="5dp"
        android:background="@drawable/ic_map_menu_ui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibScanBarcode"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/ibListTransformerBoxes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ibScanBarcode"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:width="48sp"
        android:height="48sp"
        android:padding="5dp"
        android:background="@drawable/ic_scan_icon_ui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ibSideMenu"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ibSideMenu"
        android:layout_width="28sp"
        android:layout_height="24sp"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:width="48sp"
        android:height="48sp"
        android:padding="5dp"
        android:background="@drawable/ic_right_menu_icon_ui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>